<div class="page-header">
  <h1>Scoreboard <small><%=current_user.email%></small></h1>
</div>

    <div class="panel panel-default">
      <div class="panel-heading"><b>Average Summary</b></div>
      <div class="panel-body">
        <% if @user.games.any? %>
        <div class="row">
          <div class="col-sm-3 text-left">
            <% @average = @user.average_results(@user.games) %>
            <b>Accuracy:</b> <%= @average[:accuracy] %> %
          </div>

          <div class="col-sm-3 text-left">
            <b>WPM:</b> <%= @average[:wpm] %>
          </div>

          <div class="col-sm-3 text-left">
            <b>Time:</b> <%= @average[:time] %> s
          </div>

          <div class="col-sm-3 text-left">
            <b>Score:</b> <%= @average[:score] %>
          </div>
        </div>
        <% end %>
      </div>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Accuracy (%)</th>
          <th>WPM</th>
          <th>Time (s)</th>
          <th>Score</th>
        </tr>
      </thead>
      <tbody>
          <% @user.games.each do |game| %>
            <tr>
              <td><%=game.accuracy%></td>
              <td><%=game.wpm%></td>
              <td><%=game.duration%></td>
              <td><%=game.score %></td>
            </tr>
          <% end %>
      </tbody>
    </table>
