<audio style="visibility: hidden" controls="controls" id="audio">
  <source src="https://s3.amazonaws.com/codeygonzales/arriba.mp3" type="audio/mp3" />
</audio>

<div id="mikes-a-div">
  <div id="container">

    <h1 id="start-typing">Start typing to begin...</h1>

    <div class="row type-info">
      <div class="col-sm-10">
        <div class="code-type"><b><%= @code.language.capitalize %></b> | <%= @code.difficulty(@code.level) %></div>
      </div>

      <div class="col-sm-2">
        <div id="timer"></div>
      </div>
    </div>

    <div hidden id="test-string"><%= @code.content %></div>

    <div id="prompt-container">
      <pre><code id="code"></code></pre>
    </div>

    <% if !user_signed_in? %>
    <div class="sign-in-prompt">
      <p>Why not <a href="/users/sign_up">sign up</a> to track your score against our global <a href="/users">leaderboard</a>.</p>
    </div>
    <% end %>

    <div class="row">
      <div class="col-sm-6">
        <div id="results">
          <div id="result-time"></div>
          <div id="wpm"></div>
          <div id="accuracy"></div>
          <div id="score"></div>
        </div>
        <a id='play-again' type="button" href='/' class="btn btn-primary btn-lg hidden">Play Again</a>
      </div>

      <div class="col-sm-6">
        <img id='codey' width="400" src="/img/codey.png" alt="codey" class='center-block hidden'/>
      </div>
    </div>

  </div>
</div>
